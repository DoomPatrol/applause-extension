{
  "name": "Applause",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Give all of your favorite writers on Medium the applause they deserve.",
  "homepage_url": "https://www.austingrandt.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "browser action demo",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "contentSettings",
    "tabs",
    "activeTab",
    "storage",
    "http://google.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
			  "http://*/*"
      ],
      "js": [
        "js/jquery/jquery.min.js",
        "src/inject/inject.js"
      ],
      "css": [
        "src/inject/inject.css"
      ],
      "run_at": "document_end"
    }
  ]
}
